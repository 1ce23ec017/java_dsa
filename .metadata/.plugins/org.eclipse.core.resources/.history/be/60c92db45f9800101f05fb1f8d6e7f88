package array;
import java.util.Arrays;

public class reverse_array {
	public static void main(String[] args) {
		int[] arr = {1,2,3,4};
		System.out.println(Array.toString(arr));
		
		int start = 0;
		int end = arr.length;
		
		while (start < end)
		{
			int temp = arr[end];
			arr[end] = arr[start];
			arr[start] = temp;
			start++;
			end--;
		}
		
	}

}
